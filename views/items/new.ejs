<% include ../partials/header %>

    <div class="row">
            <h1 style="text-align:center">Create a New Item</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/items" method="POST">
                   <div class="form-group">
                        <input class="form-control" required type="text" name="name" placeholder="Name">
                   </div>
                   <div class="form-group">
                        <input class="form-control" required type="text" name="image" placeholder="Image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" required type="text" name="description" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <input class="form-control" required type="number" name="price" placeholder="Price" min="10" step="10">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>                
                </form>
                <a href="/items">Go Back</a>
            </div>   
    </div> 
<% include ../partials/footer %>